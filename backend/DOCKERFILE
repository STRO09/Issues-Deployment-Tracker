# ===== Stage 1: Build WAR =====
FROM maven:3.8.5-openjdk-8-slim AS builder

WORKDIR /app

# Copy only pom.xml first to cache dependencies
COPY pom.xml .
RUN mvn dependency:go-offline -B

# Copy source code and build WAR
COPY src ./src
RUN mvn clean package -DskipTests

# ===== Stage 2: Tomcat runtime =====
FROM tomcat:9.0.80-jdk8-openjdk

# Remove default webapps to avoid ROOT conflicts
RUN rm -rf /usr/local/tomcat/webapps/*

# Copy WAR from builder stage
COPY --from=builder /app/target/IssuesandDeploymentTracker-0.0.1-SNAPSHOT.war /usr/local/tomcat/webapps/ROOT.war

# Expose Tomcat port
EXPOSE 8080

# Start Tomcat
CMD ["catalina.sh", "run"]
